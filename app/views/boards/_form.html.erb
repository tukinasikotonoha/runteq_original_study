<%= form_with model: board, local: true do |form| %>
  <%#= render 'layouts/error_messages', model: form.object %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control", rows: "10", style: 'height: 200px', id: "board_body"%>
  </div>
  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image , class: "form-control", id: "myfile" %>
    <%= form.hidden_field :image_cache %>
  </div>
  <div class="mt-3 mb-3">
    <%#= image_tag board.image.url, id: "image-preview", class: "rounded-circle", width: 100, height: 100 %>
  </div>
  <% if board.new_record? %>
    <%= form.submit t(".create"), class: "btn btn-primary" %>
  <% else %>
    <%= form.submit t(".update"), class: "btn btn-primary" %>
  <% end %>
<% end %>
